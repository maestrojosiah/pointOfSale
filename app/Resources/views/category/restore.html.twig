{% extends 'base.html.twig' %}
{% block body %}
{{ include('templates/nav.html.twig') }}       
<div id="page-wrapper">
<div class="panel-body">

<table width="100%" class="table table-striped table-bordered table-hover" id="niceTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>

{% for category in data.categories %}
            <tr class="odd gradeX">
                <td>{{ category.categoryName }}</td>
                <td class="center">
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#restoreModal{{ category.id }}" data-categoryId="{{ category.id }}">
                  Restore
                </button>
                </td>
            </tr>

    <!-- Modal -->
    <div class="modal fade" id="restoreModal{{ category.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="color:black; text-shadow:none;">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Restore {{ category.categoryName }}?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>Do you really want to restore {{ category.categoryName }}?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <a href="{{ path('category_restore', { 'categoryId': category.id } ) }}" class="btn btn-primary">Restore</a>
          </div>
        </div>
      </div>
    </div>
{% endfor %}
  </tbody>
</table>
<a href="{{ path('category_list') }}">Back to categories</a>
</div>
</div>

<!-- /.panel-body -->
