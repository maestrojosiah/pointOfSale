{% extends 'base.html.twig' %}
{% block body %}
{{ include('templates/nav.html.twig') }}       
<div id="page-wrapper">
<div class="panel-body">
<!-- Large modal -->
    <div class="container">
        <div class="row">
            <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <address>
                        </address>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                        <p>
                            <em>Date: {{ data.sale.onDate|date('Y-m-d') }}</em>
                        </p>
                        <p>
                            <em>Receipt #: {{data.sale.id}}</em>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="text-center">
                        <h1>Receipt</h1>
                    </div>
                    <table class="table table-hover" id="receiptTable">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Qty</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                        	{% for stock in data.stocks %}
                        		<tr>
                        			<td>{{stock.product}}</td>
                        			<td>{{stock.quantity}}</td>
                        			<td class="text-center">{{stock.retailCost}}</td>
                        			<td class="text-center">{{stock.retailCost}}</td>
                        		</tr>
                        	{% endfor %}
                        </tbody>
                        <tbody>
                            <tr>
                                <td>   </td>
                                <td>   </td>
                                <td class="text-right">
                                <p>
                                    <strong>Total: </strong>
                                </p>
                                </td>
                                <td class="text-center">
                                <p id="receiptTotal">{{data.sale.totalSale}}</p>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}
