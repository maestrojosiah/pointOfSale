{% extends 'base.html.twig' %}
{% block body %}
{{ include('templates/nav.html.twig') }}       
<div id="page-wrapper">
<div class="panel-body">
<div id="receiptModal" class="">
    <div class="container">
        <div class="row">
            <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <address>
                            {{ data.systSetting.receiptHeader|raw }}
                        </address>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                        <p>
                            <em>Date: {{ data.lastSale.onDate|date('d - m -Y') }}</em>
                        </p>
                        <p>
                            <em>Receipt #: {{ data.lastSale.id }}</em>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="text-center">
                        <h1>Receipt</h1>
                    </div>
                    <table class="table table-hover" id="receiptTable">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Qty</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                        	{% for item in data.lastSale.stocks %}
                        		<tr>
                        			<td>{{ item.product }}</td>
                        			<td>{{ item.quantity }}</td>
	                                <th class="text-center">{{ item.retailCost }}</th>
	                                <th class="text-center">{{ item.retailCost * item.quantity }}</th>
                        		</tr>
                        	{% endfor %}
                        </tbody>
                        <tbody>
                            <tr>
                                <td>   </td>
                                <td>   </td>
                                <td class="text-right">
                                <p>
                                    <strong>Total: </strong>
                                </p>
                                </td>
                                <td class="text-center">
                                <p id="receiptTotal">{{ data.lastSale.totalSale }}</p>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1">
                <div class="btn-group" role="group" aria-label="...">
                    <button type="button" class="btn btn-success btn-lg">
                        Print  <span class="glyphicon glyphicon-chevron-right"></span>
                    </button>
                    <a href="{{path('homepage')}}" class="btn btn-success btn-lg">
                        Back to POS  <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
{% endblock %}