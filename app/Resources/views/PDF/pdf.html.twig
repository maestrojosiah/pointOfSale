{% extends 'layout-pdf.html.twig' %}
{% block stylesheets %}
<style type="text/css">
    body {
        font-size: 8px;
    }
 	table {
    	border-collapse: collapse;
	}

	table, th, td {
	    border: 1px solid black;
	} 

	th {
	    text-align: left;
	} 
	th, td {
	    padding: 5px;
	    text-align: left;
    	border-bottom: 1px solid #ddd;
   	} 
 	tr:nth-child(even) {background-color: #f2f2f2} 

</style>
{% endblock %}
{% block content %}

<div class="panel-body">

<table width="100%" class="table table-striped table-bordered table-hover display" id="">
    <thead>
        <tr>
            <th>#</th>
            {% for key in entity[0]|keys %}
			    <th>{{ key }}</th>
			{% endfor %}
        </tr>
    </thead>
    <tbody>
{% set total = 0 %}
{% set counter = 1 %}
{% for entry in entity %}
    <tr class="odd gradeX">
        <td>{{ counter }}</td>
    	{% for key,value in entry %}
    		{% if key == "date" %}
    			<td>{{ value | date('Y-m-d') }}</td>
            {% elseif key == "cost" or key == "sales" or key == "tax" %}
                {% set total = total + value * entry.quantity %}
                <td>{{ value|round(2) * entry.quantity }}</td>
    		{% else %}
    			<td class="center">{{ value }}</td>
    		{% endif %}
        {% endfor %}
        {% set counter = counter + 1 %}
    </tr>
{% endfor %}
    <tr>
        <th>Total</th>
        {% for key,value in entity[0] %}
            {% if key == "cost" or key == "sales" or key == "tax" %}
                <td>{{ total|round(2) }}</td> 
            {% else %}           
                <th>...</th>
            {% endif %}
        {% endfor %}
    </tr>
  </tbody>
</table>

