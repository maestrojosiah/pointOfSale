{% extends 'base.html.twig' %}
{% block body %}
{{ include('templates/nav.html.twig') }}			 
<div id="page-wrapper">
<div class="panel-body">
 <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Product Price List</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="{{ path('download_pdf', {'Entity':'ProductPrice'} ) }}">Download PDF <span class="sr-only"></span></a>
      </li>
    </ul>
  </div>
</nav>
<table width="100%" class="table table-striped table-bordered table-hover printTable" id="niceTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>

{% for product in data.products %}
    <tr class="odd gradeX">
        <td><b>{{ product.productCode }}</b> | {{ product.productName }}</td>
        <td>{{ product.productRetailPrice }}</td>
    </tr>

{% endfor %}
  </tbody>
</table>
</div>
</div>

<!-- /.panel-body -->
{# {{ dump(form) }} #}
{% endblock %}
