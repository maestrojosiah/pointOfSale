{% extends 'base.html.twig' %}
{% block body %}
{{ include('templates/nav.html.twig') }}       
<div id="page-wrapper">
<div class="panel-body">
 <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Select User to Edit Permissions</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="{{ path('homepage') }}">Home</a>
      </li>
    </ul>
  </div>
</nav>

<table width="100%" class="table table-striped table-bordered table-hover" id="">
    <thead>
        <tr>
            <th>User</th>
            <th>Email</th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>

      {% for user in users %}
            <tr class="odd gradeX">
                <td>{{ user.fName }} {{ user.lName }}</td>
                <td>{{ user.email }}</td>
                <td class="center">
                    <a type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal{{ user.id }}" data-categoryId="{{ user.id }}">
                  Delete
                    </a>
                    <a href="{{ path('permissions', {'user_id': user.id } ) }}" class="btn btn-info">
                  Edit Permissions
                    </a>
                </td>
            </tr>

          <!-- Modal -->
          <div class="modal fade" id="deleteModal{{ user.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="color:black; text-shadow:none;">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Delete {{ user.fName }}?</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <p>Do you really want to delete {{ user.fName }}?</p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                  <a href="" class="btn btn-primary">Delete</a>
                </div>
              </div>
            </div>
          </div>
      {% endfor %}
  </tbody>
</table>
</div>
</div>

<!-- /.panel-body -->
{# {{ dump(form) }} #}
{% endblock %}
