{% extends 'base.html.twig' %}
{% block body %}
{{ include('templates/nav.html.twig') }}			 
<div id="page-wrapper">
<div class="panel-body">
    <div class="row">
        <div class="col-lg-6">
        	<h4>Edit stock entry</h4>
			{{ form_start(form) }}
                <div class="form-group">
                    <label>{{ form_label(form.quantity) }}</label>
        			{{ form_widget(form.quantity, {'attr': {'class': 'form-control', 'id': 'quantity' }} ) }}
                </div>
                
                <div class="form-group">
                    <label>{{ form_label(form.transaction) }}</label>
        			{{ form_widget(form.transaction, {'attr': {'class': 'form-control', 'id': 'transaction' }} ) }}
                </div>
                
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}} ) }}

			{{ form_end(form) }}
        </div>
    </div>
    <!-- /.row (nested) -->
</div>
</div>
<!-- /.panel-body -->
{% endblock %}
