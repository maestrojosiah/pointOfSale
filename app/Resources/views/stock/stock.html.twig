<table width="100%" class="table table-striped table-bordered table-hover display printTable" id="">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Quantity</th>
            <th>Transaction</th>
            <th>Balance</th>
            <th class="hidableColumn">Manage</th>
        </tr>
    </thead>
    <tbody>
    <tr>
        <th>Balance as on {{ dates.from }}</th>
