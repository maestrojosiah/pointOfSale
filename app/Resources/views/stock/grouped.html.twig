{% extends 'base.html.twig' %}
{% block body %}
{{ include('templates/nav.html.twig') }}			 
<div id="page-wrapper">
<div class="panel-body">
<form action="" method="post">
<div class="row">
	<div class="col-lg-4">
	    <div class="panel panel-default">
	        <div class="panel-heading">
	            Specific Date
	        </div>
	        <div class="panel-body">
          		<input name="form[dateSpecific]" value="{{dates.specific}}" type="text" class="datepicker" />
	        </div>
	        <div class="panel-footer">
	            One day report
	        </div>
	    </div>
	</div>
	<div class="col-lg-4">
	    <div class="panel panel-success">
	        <div class="panel-heading">
	            Range
	        </div>
	        <div class="panel-body">
	            <input name="form[dateFrom]" value="{{dates.from}}" type="text" class="datepicker" />
	        </div>
	        <div class="panel-footer">
	            Start Date
	        </div>
	    </div>
	</div>
	<!-- /.col-lg-4 -->
	<div class="col-lg-4">
	    <div class="panel panel-success">
	        <div class="panel-heading">
	            Range
	        </div>
	        <div class="panel-body">
	            <input name="form[dateTo]" value="{{dates.to}}" type="text" class="datepicker" />
	        </div>
	        <div class="panel-footer">
	            End date
	        </div>
	    </div>
	</div>
	<!-- /.col-lg-4 -->
</div>
<input class="btn btn-outline btn-primary btn-lg btn-block" type="submit" value="SHOW SALES SUMMARY RECORDS" />
</form>
{% if specificStock is defined and specificStock is not empty%}
<div class="panel-body">
 <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Sales Summary for {{ dates.specific }}</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="">Download PDF <span class="sr-only"></span></a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="">Download Excel <span class="sr-only"></span></a>
      </li>
    </ul>
  </div>
</nav>
<table width="100%" class="table table-striped table-bordered table-hover display" id="">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Sales</th>
            <th>Cost</th>
            <th>Tax</th>
            <th>Profit</th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>
{% set salesTotal = 0 %}
{% set costTotal = 0 %}
{% set taxTotal = 0 %}
{% set profitTotal = 0 %}
{% for stock in specificStock %}
	<!--calculations-->
  {% if stock.productTax == 1.16 %}
     {% set thisTax = stock.tax %}
  {% else %}
     {% set thisTax = 0 %}
  {% endif %}
	{% set salesTotal = salesTotal + stock.total %}
	{% set costTotal = costTotal + stock.productCost %}
	{% set taxTotal = taxTotal + thisTax %}
	{% set profitTotal = profitTotal + stock.profit %}
    <tr class="odd gradeX">
        <td><b>{{ stock.productCode }}</b> {{ stock.productName }}</td>
        <td>{{ stock.productQuantity }}</td>
        <td class="center">{{ stock.productSales }}</td>
        <td class="center">{{ stock.productCost }}</td>
	      <td class="center">{{ thisTax|round(2) }}</td>
        <td class="center">{{ stock.profit }}</td>
        <td class="center">
            <a type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal{{ stock.productId }}" data-stockId="{{ stock.productId }}">
          Delete
            </a>
            <a href="" class="btn btn-info">
          Edit
            </a>
        </td>
    </tr>

    <!-- Modal -->
    <div class="modal fade" id="deleteModal{{ stock.productId }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="color:black; text-shadow:none;">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Delete {{ stock.productName }}?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>Do you really want to delete {{ stock.productName }}?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <a href="" class="btn btn-primary">Delete</a>
      		</div>
        </div>
      </div>
    </div>
{% endfor %}
  </tbody>
  <tbody>
    <tr class="odd gradeX">
        <td></td>
        <td>Totals</td>
        <td>{{ salesTotal|round(2) }}</td>
        <td>{{ costTotal|round(2) }}</td>
        <td class="center">{{ taxTotal|round(2) }}</td>
        <td class="center">{{ profitTotal|round(2) }}</td>
        <td class="center"></td>
    </tr>
  </tbody>
</table>
<a href="">Restore deleted Products</a>
</div>
{% endif %}
